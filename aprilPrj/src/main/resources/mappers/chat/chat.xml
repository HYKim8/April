<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.april.groupware.chat">


 	<sql id="baseCondition">
        <choose>
            <when test="'10' == searchDiv">
                AND dept_nm = #{searchWord}
            </when>
            <when test="'20' == searchDiv">
                AND dept_nm = #{searchWord}
            </when>
            <when test="'30' == searchDiv">
                AND dept_nm = #{searchWord}
            </when>
        </choose>
    </sql>
    
	<!-- 목록조회 -->
    <select id="doRetrieve" parameterType="SearchVO" resultType="ChatVO">
		SELECT T1.*
		FROM(
		    SELECT B.id,
		            B.name,
		            B.position,
		            B.dept_nm,
		            rnum
		    FROM(
		        SELECT ROWNUM rnum, A.*
		        FROM (
		            SELECT *
		            FROM organization
		            WHERE 1=1
		            --검색조건
		            <include refid="baseCondition"/>
		            )A
		        WHERE ROWNUM  <![CDATA[ <= ]]> (#{pageSize} *(#{pageNum} - 1)+#{pageSize})
		    )B
		    WHERE rnum <![CDATA[ >= ]]> (#{pageSize}*(#{pageNum}-1)+1)
		    )T1
    </select>

 
  
        
    <!-- 단건조회 -->
    <select id="doSelectOne" parameterType="ChatVO" resultType="ChatVO">
		SELECT
		    id,
		    dept_nm,
		    name,
		    position
		FROM organization
		WHERE id = #{id}  
    </select>
    
    
    
  
</mapper>